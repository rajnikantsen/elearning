

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Online Interview Page</title>
    <style>
        /* General Styles */
        body {
            margin: 0;
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #4A00E0, #8E2DE2);
            color: #333;
            /*    display: flex;
*/ justify-content: center;
            align-items: center;
            /*padding: 20px;*/
        }

        .container {
            display: flex;
            height: 100vh;
            width: 100%;
            overflow: hidden;
        }

        /* Live Video Section */
        .video-container {
            flex: 2;
            padding: 20px;
            background: #f0f8ff;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        #live-video {
            width: 100%;
            height: 60%;
            margin-top: 20px;
            border: 2px solid #007bff;
            display: flex;
            justify-content: center;
            align-items: center;
            background: black;
        }

        video {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .controls {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        button {
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            margin: 10px;
        }

        .join-btn {
            background-color: #28a745;
            color: white;
        }

        .leave-btn {
            background-color: #dc3545;
            color: white;
        }

        .mute-btn {
            background-color: #ffc107;
            color: black;
        }

        .toggle-camera-btn {
            background-color: #17a2b8;
            color: white;
        }

            .toggle-camera-btn.off {
                background-color: #6c757d;
            }

        /* Sidebar Section */
        .sidebarr {
            flex: 1;
            background: #ffffff;
            padding: 20px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            border-left: 2px solid #ddd;
        }

        .notes textarea {
            width: 100%;
            height: 100px;
            border: 1px solid #ccc;
            border-radius: 4px;
            padding: 10px;
        }

        /* Chat Section */
        .chat-container {
            flex: 1;
            padding: 20px;
            background: #ffffff;
            border-left: 2px solid #ddd;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .chat-box {
            flex: 1;
            border: 1px solid #ccc;
            background: #f9f9f9;
            padding: 10px;
            overflow-y: auto;
            border-radius: 4px;
            margin-bottom: 10px;
        }

            .chat-box .message {
                margin-bottom: 10px;
            }

            .chat-box .user {
                font-weight: bold;
                margin-right: 5px;
            }

        .chat-input {
            display: flex;
        }

        #chat-input {
            flex: 1;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        #chat-send-btn {
            padding: 10px 20px;
            background: #007bff;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            #chat-send-btn:hover {
                background: #0056b3;
            }
    </style>
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            let stream = null;
            let micTrack = null;
            let videoTrack = null;

            // Start video and audio stream
            document.getElementById("join-btn").addEventListener("click", async () => {
                try {
                    stream = await navigator.mediaDevices.getUserMedia({ video: true, audio: true });
                    const videoElement = document.getElementById("interview-video");
                    videoElement.srcObject = stream;

                    // Get audio and video tracks for controls
                    micTrack = stream.getAudioTracks()[0];
                    videoTrack = stream.getVideoTracks()[0];
                } catch (error) {
                    alert("Unable to access the camera or microphone. Please check permissions.");
                    console.error(error);
                }
            });

            // Stop video and audio stream
            document.getElementById("leave-btn").addEventListener("click", () => {
                if (stream) {
                    const tracks = stream.getTracks();
                    tracks.forEach(track => track.stop());
                    stream = null;
                }
                document.getElementById("interview-video").srcObject = null;
            });

            // Mute/Unmute microphone
            document.getElementById("mute-mic-btn").addEventListener("click", (e) => {
                if (micTrack) {
                    micTrack.enabled = !micTrack.enabled;
                    e.target.textContent = micTrack.enabled ? "Mute Mic" : "Unmute Mic";
                } else {
                    alert("Microphone is not available.");
                }
            });

            // Mute/Unmute speaker
            document.getElementById("mute-speaker-btn").addEventListener("click", (e) => {
                const videoElement = document.getElementById("interview-video");
                videoElement.muted = !videoElement.muted;
                e.target.textContent = videoElement.muted ? "Unmute Speaker" : "Mute Speaker";
            });

            // Turn on/off camera
            document.getElementById("toggle-camera-btn").addEventListener("click", (e) => {
                if (videoTrack) {
                    videoTrack.enabled = !videoTrack.enabled;
                    e.target.textContent = videoTrack.enabled ? "Turn Off Camera" : "Turn On Camera";
                    e.target.classList.toggle("off");
                } else {
                    alert("Camera is not available.");
                }
            });

            // Chat functionality
            const chatBox = document.getElementById("chat-box");
            const chatInput = document.getElementById("chat-input");
            const chatSendBtn = document.getElementById("chat-send-btn");

            chatSendBtn.addEventListener("click", () => {
                const message = chatInput.value.trim();
                if (message) {
                    const messageDiv = document.createElement("div");
                    messageDiv.className = "message";
                    messageDiv.innerHTML = `<span class="user">Interviewer:</span> ${message}`;
                    chatBox.appendChild(messageDiv);
                    chatInput.value = "";
                    chatBox.scrollTop = chatBox.scrollHeight; // Scroll to bottom
                }
            });
        });
    </script>
</head>
<body>
    <div class="container">
        <!-- Live Video Section -->
        <div class="video-container">
            <h2>Live Interview</h2>
            <div id="live-video">
                <video id="interview-video" autoplay muted playsinline></video>
            </div>
            <div class="controls">
                <button class="join-btn" id="join-btn">Join Interview</button>
                <button class="leave-btn" id="leave-btn">Leave Interview</button>
                <button class="mute-btn" id="mute-mic-btn">Mute Mic</button>
                <button class="mute-btn" id="mute-speaker-btn">Mute Speaker</button>
                <button class="toggle-camera-btn" id="toggle-camera-btn">Turn Off Camera</button>
            </div>
        </div>

        <!-- Sidebar Section -->
        <div class="sidebarr">
            <!-- Notes Section -->
            <div class="notes">
                <h3>Interviewer Notes</h3>
                <textarea placeholder="Write your notes here..." id="notes-area"></textarea>
            </div>
        </div>

        <!-- Chat Section -->
        <div class="chat-container">
            <h3>Chat</h3>
            <div class="chat-box" id="chat-box"></div>
            <div class="chat-input">
                <input type="text" id="chat-input" placeholder="Type a message...">
                <button id="chat-send-btn">Send</button>
            </div>
        </div>
    </div>
</body>
</html>
