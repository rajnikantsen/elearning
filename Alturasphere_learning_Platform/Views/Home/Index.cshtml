        }
        .home-page {
            padding: 2em;
            margin-left: 0px; /* Ensure space for sidebar */
            background-color: #f4f4f4;
            min-height: 100vh; /* Full height content */
            box-sizing: border-box; /* Include padding and margin in height calculation */
        }

        /* Hero Banner */
        .hero-banner {
            text-align: center;
            background: linear-gradient(to bottom right, #013f6b, #00c4ff);
            color: white;
            padding: 4em 2em;
            border-radius: 8px;
            margin-bottom: 2em;
        }

            .hero-banner h1 {
