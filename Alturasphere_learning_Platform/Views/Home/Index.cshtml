                margin-bottom: 0.5em;
            }

            .hero-banner p {
                font-size: 1.2em;
                margin-bottom: 1.5em;
            }

        .cta-button {
            background-color: #ff5722;
            color: white;
            text-decoration: none;
            padding: 0.8em 1.5em;
            border-radius: 5px;
            font-size: 1em;
            transition: background-color 0.3s;
        }

            .cta-button:hover {
                background-color: #e64a19;
            }

        /* Image Slider */
        .image-slider {
            margin: 2em 0;
        }

        .slider {
            position: relative;
            overflow: hidden;
            width: 100%;
        }

        .slides {
            display: flex;
            animation: slide 10s infinite;
        }

            .slides img {
                width: 100%;
                height: 300px;
                object-fit: cover;
                border-radius: 8px;
                margin-right: 50px;
            }

        @@keyframes slide {
            0% {
                transform: translateX(0%);
            }

            25% {
                transform: translateX(-100%);
            }

            50% {
                transform: translateX(-200%);
            }

            75% {
                transform: translateX(-300%);
            }

            100% {
                transform: translateX(0%);
            }
        }

        /* Features Section */
        .features {
            margin: 2em 0;
            text-align: center;
        }

            .features h2 {
                font-size: 2em;
                margin-bottom: 1em;
                color: #013f6b;
            }

        .feature-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 1.5em;
        }

        .feature {
            background: white;
            padding: 1.5em;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
        }

            .feature:hover {
                transform: translateY(-10px);
            }

            .feature h3 {
                font-size: 1.5em;
                color: #013f6b;
                margin-bottom: 0.5em;
            }

            .feature p {
                font-size: 1em;
                color: #555;
            }

        /* Ensure the content stays responsive */
        @@media (max-width: 768px) {
            .home-page {
                margin-left: 0;
                padding: 1em;
            }

            .feature-grid {
                grid-template-columns: 1fr;
            }
        }

        .testimonials {
            margin: 3em 0;
            text-align: center;
            background: #f7fbfc;
            padding: 2em;
            border-radius: 8px;
        }

            .testimonials h2 {
                font-size: 2em;
                color: #013f6b;
                margin-bottom: 1em;
            }

        .testimonial-container {
            display: flex;
            justify-content: space-between;
            gap: 1em;
        }

        .testimonial {
            background: white;
            padding: 1em;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            flex: 1;
            transition: transform 0.3s;
        }

            .testimonial:hover {
                transform: translateY(-5px);
            }

            .testimonial p {
                font-style: italic;
                margin-bottom: 1em;
                color: #555;
            }

            .testimonial span {
                font-weight: bold;
                color: #013f6b;
            }
