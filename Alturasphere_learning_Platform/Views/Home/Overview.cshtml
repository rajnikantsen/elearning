<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Overview - Altura Sphere Technologies</title>
    <link rel="stylesheet" href="styles.css">
    <style>
        /* General Styling */
        body {
            margin: 0;
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #4A00E0, #8E2DE2);
            color: #333;
           /* display: flex;*/
            justify-content: center;
            align-items: center;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        h1, h2 {
            color: #007bff;
        }

        /* Overview Section */
        .overview-container {
            padding: 20px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        .overview-summary {
            display: flex;
            justify-content: space-between;
            margin-bottom: 30px;
        }

        .card {
            background: #ffffff;
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 15px;
            text-align: center;
            width: 30%;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s;
        }

        .card:hover {
            transform: scale(1.05);
        }

        .card h2 {
            margin-bottom: 10px;
        }

        .progress-section {
            text-align: center;
            margin-bottom: 30px;
        }

        .progress-bar {
            background: #eee;
            border-radius: 20px;
            width: 80%;
            margin: 20px auto;
            height: 30px;
            overflow: hidden;
        }

        .progress {
            background: linear-gradient(90deg, #007bff, #0056b3);
            height: 100%;
            line-height: 30px;
            text-align: center;
            color: #fff;
            font-weight: bold;
            width: @ViewBag.Progress%;
        }

        /* Announcements Section */
        .announcements {
            padding: 20px;
            background: #ffffff;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
        }

        .announcements h2 {
            margin-bottom: 10px;
        }

        .announcements ul {
            list-style: none;
            padding: 0;
        }

        .announcements li {
            margin-bottom: 10px;
            font-size: 16px;
            color: #555;
        }

        .announcements li::before {
            content: "• ";
            color: #007bff;
            font-weight: bold;
        }

        @@media (max-width: 768px) {
            .overview-summary {
                flex-direction: column;
                align-items: center;
            }

            .card {
                width: 90%;
                margin-bottom: 15px;
            }

            .progress-bar {
                width: 90%;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Overview Section -->
        <div class="overview-container">
            <h1>Welcome to Your Learning Dashboard</h1>
            <div class="overview-summary">
                <div class="card">
                    <h2>Completed Courses</h2>
                    <p>@ViewBag.CompletedCourses</p>
                </div>
                <div class="card">
                    <h2>Ongoing Lessons</h2>
                    <p>@ViewBag.OngoingLessons</p>
                </div>
                <div class="card">
                    <h2>Upcoming Tasks</h2>
                    <p>@ViewBag.UpcomingTasks</p>
                </div>
            </div>

            <div class="progress-section">
                <h2>Your Progress</h2>
                <div class="progress-bar">
                    <div class="progress" id="progress">@ViewBag.Progress% Complete</div>
                </div>
            </div>

            <div class="announcements">
                <h2>Announcements</h2>
                @if (ViewBag.Announcements != null)
                {
                    <ul id="announcements-list">
                        @foreach (var announcement in ViewBag.Announcements as List<string>)
                        {
                            <li>@announcement</li>
                        }
                    </ul>
                }
                else
                {
                    <p>No announcements available at the moment.</p>
                }
            </div>
        </div>
    </div>

    <script>
        const progress = @ViewBag.Progress;

        function animateProgressBar() {
            const progressBar = document.getElementById("progress");
            progressBar.style.width = `${progress}%`;
            progressBar.textContent = `${progress}%`;
        }

        animateProgressBar();
    </script>
</body>
</html>

